pipeline {
  agent any
  environment {
    APP_NAME = "todo-app"
    IMAGE_NAME = "yourdockerhubusername/todo-app"
    IMAGE_TAG = "${env.BUILD_NUMBER}"
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
      }
    }
    stage('Test') {
      steps {
        sh 'npm install'
        sh 'npm test || true'
      }
    }
    stage('Security') {
      steps {
        sh 'trivy image --severity HIGH,CRITICAL --exit-code 1 $IMAGE_NAME:$IMAGE_TAG || echo "Vulnerabilities found"'
      }
    }
    stage('Deploy') {
      steps {
        sh 'docker-compose up -d'
      }
    }
  }
}
